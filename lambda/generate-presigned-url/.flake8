[flake8]
max-line-length = 88  # Matches black's default
extend-ignore = E203, W503  # Compatibility with black
select = B,C,E,F,W,T4,B9
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    .eggs,
    *.egg,
    .mypy_cache,
    .pytest_cache
    .aws_sam

# Optional: show source for errors
show-source = true

# Optional: set a complexity threshold (to keep functions simple)
max-complexity = 10
